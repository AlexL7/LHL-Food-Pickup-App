<!DOCTYPE html>
<html lang="en">
  <% include partials/_head %>
  <body>
    <% include partials/_header %>
    <div class="container">



      <div class="jumbotron">
        <h1>Checkout</h1>

        <section id="confirm_order">
          <% var total = 0.00, tax = 0.00 %>

          <% data.forEach(function(dish) { %>
            <p> Dish: <%= dish.name %> Price: <%= dish.price %> X <%= dish.quantity %> =
              <% var price = dish.price
                var quantity = dish.quantity %>
                <%= price * quantity %>
                <%total += price * quantity %>
            </p>
          <% }); %>
          <p> Total: <%= total %> </p>
          <p> Taxes (13%): <%= tax = Math.round((total * 0.13)*100)/100 %></p>
          <p> Total + Tax : <%= Math.round((total + tax)*100)/100 %> </p>

        </section>

        <a href="/users/:id/restaurants/:id/confirmation" ><form action= "" method ="POST">
          <button type="button" class="btn btn-success" name="foo" value="order_now" > Order Now </button>
        </form></a>

        <a href = "/users/2/restaurants/1/menu"><button type="button" class="btn btn-default"> Back </button></a>
      </div>
    </div>
    <% include partials/_footer %>
  </body>
</html>
